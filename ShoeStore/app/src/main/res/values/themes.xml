<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoeStore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#ffffff</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="login_to_in">
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">#171930</item>
    </style>
    <style name="username">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#171930</item>
    </style>
    <style name="password">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#171930</item>
    </style>
    <style name="or">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#171930</item>
    </style>
    <style name="new_user">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#171930</item>
    </style>
    <style name="forgot_pass">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#171930</item>
    </style>
    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>